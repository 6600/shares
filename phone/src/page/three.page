<template>
  <div class="one-box">
    <div class="chart" id="three"></div>
  </div>
</template>

<script>
  module.exports = {
    data: {
    },
    created: function () {
      document.title = '买入/卖出意愿图'
      getData('/SB').then((data) => {
        const chart = echarts.init(document.getElementById('three'))
        chart.setOption({
          series : [
            {
              name: '内盘/外盘',
              type: 'pie',
              radius : '60%',
              data: data,
              label: {
                position: 'inside',
                "formatter": '{b}: {d}%'
              },
              itemStyle: {
                emphasis: {
                  shadowBlur: 10,
                  shadowOffsetX: 0,
                  shadowColor: 'rgba(0, 0, 0, 0.5)'
                }
              }
            }
          ],
          color: ['#f17c67', '#495A80']
        })
      })
    }
  }
</script>


